extends layout

block content
    div(class="container page")
        div(class="row col-sm-12")
            h1= title
        hr
        div(id="report-page" class="row col-sm-12")
            p Zadajte PIN a d8tum jeho použitia.
            div(class="row")
                div(class="col-sm-4")
                    label(for="reportDate") Dátum
                    input(class="input-lg" id="reportDate" type='date' name="reportDate")
                div(class="col-sm-4")
                    label(for="reportPin") PIN
                    input(class="input-lg" id="reportPin" type='text' name="reportPin")
                div(class="col-sm-4")
                    button(id="createReport" class="btn-lg btn-primary") Vytvor report
            div(class="row")
                div(class="col-sm-12")
                    div(id="pinReport")
                        p Tu sa zobrazí report...

        div(id="pin-page" class="row col-sm-12")
            p Toto je zoznam aktuálne aktívnych PINov.
            div(id="active-pins")
            div(class="row")
                div(class="col-sm-4")
                    input(class="input-lg" id="newPin" type='text', placeholder='nový PIN' name='newPin' maxlength=10)
                div(class="col-sm-4")
                    button(id="saveNewPin" class="btn-lg btn-primary") Pridať nový aktívny PIN
                div(class="col-sm-4")
                    span(id="addPinStatus" class="statusMsg text-warning")
        hr
        div(id="hint-page" class="row col-sm-12")
            div(class="row")
                div(class="col-sm-12")
                    p Tu môžete modifikovať nápovedy pre 13. záhradu
                    textarea(id="newHintsText" rows="20" cols="70" placeholder="Nové nápovedy vložte sem a kliknite Uložiť.")
            div(class="row")
                div(class="col-sm-4")
                    button(id="saveHints" class="btn-lg btn-primary") Uložiť nové nápovedy
                div(class="col-sm-8")
                    span(id="saveHintsStatus" class="statusMsg")
    script.
        initAdmin();